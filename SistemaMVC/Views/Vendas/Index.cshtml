@model IEnumerable<MiniMundo.Models.Venda>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.venda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Funcionario.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.produto.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.venda)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VendaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VendaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VendaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
